<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shadow_bg_grey"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_toStartOf="@+id/img_refresh"
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_opac"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_selfreport_item"
                android:layout_width="@dimen/_40sdp"
                android:padding="5dp"
                android:layout_height="@dimen/_40sdp" />




            <TextView
                android:id="@+id/txt_selfreport_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:text="@string/employee_daily_report"
                android:textColor="@color/black"
                android:ellipsize="marquee"

                android:fontFamily="@font/robotocondensed_regular"
                android:textSize="@dimen/_11ssp"
                android:singleLine="true" />
             </LinearLayout>

   <ImageView
       android:id="@+id/img_refresh"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/refresh" />

        <!--android:background="@drawable/app_gradient_bg_rounded_corner"-->

    </RelativeLayout>
