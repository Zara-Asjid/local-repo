            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/robotocondensed_regular"
            android:textColor="?attr/themecolor"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
