<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:src="?attr/logo_vertical" />

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/l_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_bottom"
        android:layout_centerInParent="true"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgRolebased"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="?attr/empl_perf_splash" />


            <ImageView
                android:id="@+id/imgReports"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="@dimen/_15sdp"
                android:src="?attr/report_splash" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_70sdp"

            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_70sdp">

            <ImageView
                android:id="@+id/imgAttendance"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:src="?attr/attendance_splash" />

            <ImageView
                android:id="@+id/imgPermisssion"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="?attr/permission_splash" />


            <ImageView
                android:id="@+id/imgCalendar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:src="?attr/calendar_splash" />


        </RelativeLayout>



    </RelativeLayout>
    <LinearLayout

        android:id="@+id/l_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/txt_count"
            android:fontFamily="@font/robotocondensed_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/every_day_counts"
            android:textSize="@dimen/_14ssp"
            android:textColor="?attr/themecolor"/>

        <TextView
            android:id="@+id/txt_go"
            android:layout_marginStart="@dimen/_5sdp"

            android:layout_toRightOf="@+id/txt_count"
android:gravity="bottom"
            android:fontFamily="@font/robotocondensed_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_tawajud"
            android:textSize="@dimen/_16ssp"
            android:textColor="?attr/themecolor"/>

    </LinearLayout>


</RelativeLayout>
