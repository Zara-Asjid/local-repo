<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Set your desired background color -->
            <corners android:radius="16dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <!-- Add a top shadow -->
    <item android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Match the background color -->
            <corners android:radius="16dp" /> <!-- Same corner radius as the background -->
        </shape>
    </item>
</layer-list>

